<j:jelly xmlns:j="jelly:core" xmlns:f="/lib/form">
  <f:entry title="${%Username}" field="username">
    <f:textbox />
  </f:entry>
  <f:entry title="${%Password}" field="password">
    <f:password />
  </f:entry>
  <f:validateButton
   title="${%Validate}" progress="${%Testing...}"
   method="validate" with="username,password" />
</j:jelly>